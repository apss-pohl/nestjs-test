{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "./apps/main/*", "./apps/preload/*"],
  "exclude": [
    "scripts",
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/prisma",
    "**/.output",
    "**/.turbo",
    "**/.nuxt",
    "**/*spec.ts",
    "**/out"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@root/*": ["./*"],
      "@m/*": ["./apps/main/src/*"],
      "@g/*": ["./apps/main/src/@generated/*"],
      "@r/*": ["./apps/renderer/src/*"],
      "@p/*": ["./packages/*"],
      "@aps-services/hashing": ["./packages/hashing/src"]
    }
  }
}
